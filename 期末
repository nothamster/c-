        public static void returnAvaerage(double value1,double value2,double value3)
        {
            double average;
            average = (value1 + value2 + value3) / 3;
            Console.WriteLine(average);
        }

        public static void printAll(double value1, double value2, double value3,double average)
        {
            int number1, number2, number3, average1;
            number1 = Convert.ToInt32(value1);
            number2 = Convert.ToInt32(value2);
            number3 = Convert.ToInt32(value3);
            average1 = Convert.ToInt32(average);
            Console.WriteLine("score 1:{0}", number1);
            Console.WriteLine("score 2:{0}", number2);
            Console.WriteLine("score 3:{0}", number3);
            Console.WriteLine("average:{0}", average1);
        }
        public static void enterAll()
        {
            string studentID, exam1, exam2, exam3,average;
            double score1, score2, score3, average1;
            int number1, number2, number3;
            Console.Write("student ID:");
            studentID = Console.ReadLine();
            Console.Write("score 1:");
            exam1 = Console.ReadLine();
            Console.Write("score 2:");
            exam2 = Console.ReadLine();
            Console.Write("score 3:");
            exam3 = Console.ReadLine();
            Console.Write("average:");
            average = Console.ReadLine();
            Console.Write("score 1(with no digits to the right of the decimal):");
            exam1 = Console.ReadLine();
            Console.Write("score 2(with no digits to the right of the decimal):");
            exam2 = Console.ReadLine();
            Console.Write("score 3(with no digits to the right of the decimal):");
            exam3 = Console.ReadLine();
            Console.Write("average(with no digits to the right of the decimal):");
            average = Console.ReadLine();
            return;
        }



